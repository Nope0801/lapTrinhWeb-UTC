@using Day03Lab_231230949_29_08_2025.Models
@{
    var students = ViewData["students"] as List<Student>;
}

<h2>Danh sách sinh viên</h2>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên</th>
            <th>Hoạt động</th>
            <th>Tuổi</th>
            <th>Giới tính</th>
        </tr>
    </thead>
    <tbody>
        @if (students != null)
        {
            foreach (var student in students)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@(student.Active ? "Có" : "Không")</td>
                    <td>@student.Age</td>
                    <td>@student.Gender</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">Không có dữ liệu sinh viên.</td>
            </tr>
        }
    </tbody>
</table>
@* Modern Admin Layout inspired by your screenshot *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background: #f7f8fa;
        }

        .sidebar {
            min-width: 230px;
            max-width: 230px;
            background: #fff;
            border-right: 1px solid #e5e7eb;
            min-height: 100vh;
            padding-top: 1.5rem;
        }

            .sidebar .sidebar-header {
                font-weight: bold;
                font-size: 1.3rem;
                padding: 0 1.5rem 1.5rem 1.5rem;
                color: #ff6a00;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

            .sidebar .nav-link {
                color: #6b7280;
                font-weight: 500;
                border-radius: 8px;
                margin: 0.2rem 0.5rem;
                padding: 0.7rem 1.2rem;
                display: flex;
                align-items: center;
                gap: 0.8rem;
                transition: background 0.2s, color 0.2s;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    background: #f3f4f6;
                    color: #ff6a00;
                }

            .sidebar .nav-section {
                font-size: 0.85rem;
                color: #b0b3b8;
                text-transform: uppercase;
                margin: 1.5rem 1.5rem 0.5rem 1.5rem;
                letter-spacing: 1px;
            }

        .topbar {
            background: #fff;
            border-bottom: 1px solid #e5e7eb;
            padding: 0.7rem 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .topbar .search-box {
                width: 300px;
                position: relative;
            }

                .topbar .search-box input {
                    border-radius: 20px;
                    padding-left: 2.2rem;
                }

                .topbar .search-box .bi-search {
                    position: absolute;
                    left: 12px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #b0b3b8;
                }

            .topbar .topbar-icons .bi {
                font-size: 1.3rem;
                color: #6b7280;
                margin-left: 1.2rem;
                cursor: pointer;
                transition: color 0.2s;
            }

                .topbar .topbar-icons .bi:hover {
                    color: #ff6a00;
                }

        .main-content {
            padding: 2rem;
        }
        

        .sidebar .sidebar-header span,
        .sidebar .nav-section,
        .sidebar .nav-link span {
            display: none;
        }

        .sidebar .sidebar-header {
            justify-content: center;
        }

        .sidebar .nav-link {
            justify-content: center;
            padding: 0.7rem 0.5rem;
        }

    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar d-flex flex-column">
            <div class="sidebar-header mb-2">
                <img src="https://img.icons8.com/color/48/000000/orange.png" width="32" height="32" alt="Logo" />
                <span>Mega Users</span>
            </div>
            <div class="nav-section">Main</div>
            <a class="nav-link active" asp-area="" asp-page="/Admin/Dashboard">
                <i class="bi bi-graph-up"></i>
                <span>Dashboard</span>
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/UserManagement">
                <i class="bi bi-people"></i>
                <span>User Management</span>
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/Application">
                <i class="bi bi-app"></i>
                <span>Application</span>
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/Pages">
                <i class="bi bi-files"></i>
                <span>Pages</span>
            </a>
            <div class="nav-section">Other</div>
            <a class="nav-link" asp-area="" asp-page="/Admin/Settings">
                <i class="bi bi-gear"></i>
                <span>Settings</span>
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/Reports">
                <i class="bi bi-bar-chart"></i>
                <span>Reports</span>
            </a>
        </nav>
        <!-- Main content -->
        <div class="flex-grow-1 d-flex flex-column min-vh-100">
            <!-- Topbar -->
            <div class="topbar">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" class="form-control" placeholder="Search..." />
                </div>
                <div class="topbar-icons d-flex align-items-center">
                    <i class="bi bi-bell"></i>
                    <i class="bi bi-envelope"></i>
                    <i class="bi bi-person-circle"></i>
                </div>
            </div>
            <main class="main-content flex-grow-1">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
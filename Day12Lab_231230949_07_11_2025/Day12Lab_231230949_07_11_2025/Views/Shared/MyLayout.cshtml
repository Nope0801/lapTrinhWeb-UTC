@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            min-height: 100vh;
            position: fixed;
        }

            .sidebar .nav-link {
                color: #adb5bd;
                font-weight: 500;
                padding: 0.75rem 1.25rem;
                transition: color 0.2s, background-color 0.2s;
            }

                .sidebar .nav-link.active, .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                }

            .sidebar .nav-section {
                font-size: 0.85rem;
                text-transform: uppercase;
                color: #6c757d;
                padding: 0.75rem 1.25rem;
            }

        .topbar {
            margin-left: 250px;
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .main-content {
            margin-left: 250px;
            padding: 1.5rem;
        }

        .topbar .search-box {
            position: relative;
            width: 300px;
        }

            .topbar .search-box input {
                border-radius: 20px;
                padding-left: 2.5rem;
            }

            .topbar .search-box .bi-search {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #adb5bd;
            }

        .topbar .topbar-icons .bi {
            font-size: 1.5rem;
            color: #6c757d;
            margin-left: 1rem;
            cursor: pointer;
            transition: color 0.2s;
        }

            .topbar .topbar-icons .bi:hover {
                color: #495057;
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header text-center py-3">
                <h5 class="mb-0">Admin Panel</h5>
            </div>
            <div class="nav-section">Main</div>
            <a class="nav-link active" asp-area="" asp-page="/Admin/Dashboard">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/UserManagement">
                <i class="bi bi-people"></i> User Management
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/Reports">
                <i class="bi bi-bar-chart"></i> Reports
            </a>
            <div class="nav-section">Settings</div>
            <a class="nav-link" asp-area="" asp-page="/Admin/Settings">
                <i class="bi bi-gear"></i> Settings
            </a>
            <a class="nav-link" asp-area="" asp-page="/Admin/Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">
            <!-- Topbar -->
            <div class="topbar">
                <div class="search-box">
                    <i class="bi bi-search"></i>
                    <input type="text" class="form-control" placeholder="Search..." />
                </div>
                <div class="topbar-icons">
                    <i class="bi bi-bell"></i>
                    <i class="bi bi-envelope"></i>
                    <i class="bi bi-person-circle"></i>
                </div>
            </div>

            <!-- Main Content -->
            <main class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>